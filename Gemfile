gem "rspec"
# Ruby linter
gem "rubocop"
# Generic interface of different Ruby template engines
gem "tilt"
# Ruby template engine
gem "erb"
# Generic interface of ruby web servers
gem "rack"
# Ruby web server
gem "thin"
# Interface of SQLite3 database engine 
gem "sqlite3"
